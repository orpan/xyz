<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sacchianand.testingnavigation.MainActivity"
    tools:showIn="@layout/app_bar_main">



        <LinearLayout android:layout_height="495dp"
            android:layout_width="368dp"
            android:orientation="vertical"
            android:background="#f8f8f8"
            xmlns:android="http://schemas.android.com/apk/res/android"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:background="@drawable/office"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />

                <TextView
                    android:id="@+id/previoussubtopicname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Professional Standards of Practice"
                    android:textColor="#ffff"
                    android:gravity="bottom"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"

                    android:lineSpacingExtra="4sp"

                    />
            </FrameLayout>
            <EditText
                android:id="@+id/search_videos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:cursorVisible="false"
                android:hint="Search Video"
                android:layout_margin="10dp"


                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerviewdata_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

</android.support.constraint.ConstraintLayout>
